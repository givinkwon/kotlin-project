<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/feed_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src= "@drawable/ic_baseline_person_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/feed_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/feed_profile_image"
        android:text= "닉네임" />


    <ImageView
        android:id="@+id/feed_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/feed_nickname"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src= "@drawable/ic_launcher_background" />


    <ImageView
        android:id="@+id/feed_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src= "@drawable/ic_baseline_favorite_border_24" />

    <ImageView
        android:id="@+id/feed_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_image"
        app:layout_constraintLeft_toRightOf="@+id/feed_like"
        android:src= "@drawable/ic_baseline_message_24" />

    <ImageView
        android:id="@+id/feed_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_image"
        app:layout_constraintLeft_toRightOf="@+id/feed_reply"
        android:src= "@drawable/ic_baseline_share_24" />


    <TextView
        android:id="@+id/feed_number_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_like"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text= "좋아요 34개" />

    <TextView
        android:id="@+id/feed_nickname_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_number_like"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text= "닉네임" />

    <TextView
        android:id="@+id/feed_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_number_like"
        app:layout_constraintLeft_toRightOf="@id/feed_nickname_bottom"
        android:text= "본문 내용" />


    <TextView
        android:id="@+id/feed_reply1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text= "댓글1" />

    <TextView
        android:id="@+id/feed_reply2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_reply1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text= "댓글2" />

    <TextView
        android:id="@+id/feed_more_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feed_reply2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text= "댓글 더보기" />




</androidx.constraintlayout.widget.ConstraintLayout>