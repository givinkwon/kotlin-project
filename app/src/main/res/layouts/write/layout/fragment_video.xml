<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kotlin.activity.view.HomeActivity">


    <!--    &lt;!&ndash; video 없을 시에는 이미지 재생 &ndash;&gt;-->
    <!--    <ImageView-->
    <!--        android:id="@+id/content_image"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        android:background="@android:color/black"/>-->

    <!-- video 재생 -->
    <VideoView
        android:id="@+id/content_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- 좋아요 -->
    <ImageView
        android:id="@+id/content_like"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_favorite_24"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content_like_text"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/content_like_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/content_like"
        app:layout_constraintBottom_toTopOf="@id/content_reply"
        app:layout_constraintRight_toRightOf="parent"
        />

    <!-- 댓글 -->
    <ImageView
        android:id="@+id/content_reply"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_message_24"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/content_like_text"
        app:layout_constraintBottom_toTopOf="@id/content_reply_text"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/content_reply_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="댓글"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/content_reply"
        app:layout_constraintBottom_toTopOf="@id/content_share"
        app:layout_constraintRight_toRightOf="parent"
        />

    <!-- 공유 -->
    <ImageView
        android:id="@+id/content_share"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_favorite_24"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/content_reply_text"
        app:layout_constraintBottom_toTopOf="@id/content_share_text"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/content_share_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="공유"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/content_share"
        app:layout_constraintBottom_toTopOf="@id/content_more"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/content_more"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="@id/content_share_text"
        app:layout_constraintRight_toRightOf="parent"
        />


    <!-- id -->
    <TextView
        android:id="@+id/content_id"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content_content"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <!-- content text -->

    <TextView
        android:id="@+id/content_content"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="콘텐츠내용"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/content_id"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>